<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="User">

    <select id="getAll" resultType="com.ugms.backend.bean.bean.response.UserResponse">
        SELECT u.id as id,u.name,u.username as username,
        u.mobile as mobile,u.role as roleId,r.name as role
        FROM demo_user u,demo_role r
        where r.role = r.id
    </select>

    <select id="getCount" resultType="int">
        SELECT count(id)
        FROM demo_user
    </select>
</mapper>
