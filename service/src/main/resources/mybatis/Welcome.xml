<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Welcome">

    <select id="getAll" resultType="com.ug369.backend.bean.bean.response.WelcomeEntry">
        SELECT u.id as id,u.content as content,u.title as title,
        u.picture as picture,u.status as status,u.order as orders,
        u.create_date as create_date
        FROM ug_welcome u
    </select>

    <select id="getCount" resultType="int">
        SELECT COUNT(id)
        FROM ug_welcome u
    </select>

</mapper>
