<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Resource">

    <select id="getByRole" parameterType="long" resultType="com.ug369.backend.service.entity.mysql.Resource">
        SELECT r.id as id,r.name,r.state as state,
        r.title as title,r.url as url
        FROM demo_resource r,demo_role_res rr
        where r.id = rr.resource and rr.role = #{rid}
    </select>

    <select id="getCount" resultType="int">
        SELECT count(id)
        FROM demo_user
    </select>
</mapper>
